# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# HTTP files
[*.http]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TOML files
[*.toml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

